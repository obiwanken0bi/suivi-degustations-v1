<div class="col-6 mx-auto my-4">
  <h2 class="text-center mb-3">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Connexion", class: "btn btn-primary mb-2" %>
    </div>
  <% end %>

  <p class="text-center mt-4">Pas de compte ? <%= render "devise/shared/links" %></p>
</div>
