<div class="col-6 mx-auto my-4">
  <h2 class="text-center mb-3">Mettre à jour mon profil</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :username,
                  label: "Identifiant",
                  hint: "Laissez vide si vous ne souhaitez pas le changer",
                  required: false,
                  input_html: { autocomplete: "new-username" } %>

      <%= f.input :password,
                  label: "Mot de passe",
                  hint: "Laissez vide si vous ne souhaitez pas le changer",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Mot de passe actuel",
                  hint: "Entrez votre mot de passe actuel pour confirmer les modifications",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Mettre à jour", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center">
    <h3 class="mt-5 mb-3">Supprimer mon compte</h3>

    <p class="mb-2">Déçu(e) ?</p>
    <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-3" %>
  </div>

  <%= link_to "Retour", root_path, class: "d-flex justify-content-center" %>
</div>
