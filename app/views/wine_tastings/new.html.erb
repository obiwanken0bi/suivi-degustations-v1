<div class="col-6 mx-auto my-4">
  <h2 class="text-center mb-3">Ajouter une dégustation de vin</h2>

  <%= simple_form_for [ @user, @wine_tasting ] do |f| %>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :producer, label: "Producteur" %>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :color, collection: ["Rouge", "Blanc", "Rosé"], label: "Couleur" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :vintage, collection: ((Date.today.year - 150)..(Date.today.year)).to_a.reverse,
                              label: "Millésime" %>
      </div>
    </div>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :label, label: "Appellation", placeholder: "Pessac-Léognan, Muscadet,..." %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :grape_variety, label: "Cépages", placeholder: "Merlot 15%, Riesling 100%,..." %>
      </div>
    </div>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :alcohol, label: "Degré d'alcool", placeholder: "12.5" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :price, label: "Prix", placeholder: "18.99" %>
      </div>
    </div>
    <%= f.input :tasting_date, as: :date,
                              html5: true,
                              hint: "(mm/jj/aaaa)",
                              input_html: { value: Date.today },
                              label: "Date de dégustation" %>
    <%= f.input :photo, as: :file %>
    <%= f.input :rating, label: "Note sur 10", hint: "(nombre entier)" %>
    <%= f.input :comment, label: "Commentaire", hint: "max. 300 caractères" %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Ajouter la dégustation", class: "btn btn-primary mb-2" %>
    </div>
    <p class="text-center"><%= link_to "Annuler", root_path %></p>
  <% end %>
</div>
