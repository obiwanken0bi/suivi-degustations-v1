<div class="col-6 mx-auto my-4">
  <h2 class="text-center mb-3">Ajouter une dégustation</h2>

  <%= simple_form_for [ @user, @tasting ] do |f| %>
    <%= f.input :category, as: :radio_buttons, collection: ["Bière", "Vin"], label: "Vin ou bière ?" %>

    <%# if @tasting.category == "Bière" %>
      <%#= f.input :name, label: "Nom" %>
    <%# else %>
      <%#= f.input :producer, label: "Producteur" %>
    <%# end %>

    <hr>
    
    <h3>Bière</h3>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :producer, label: "Brasseur" %>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :color, collection: ["Blonde", "Blanche", "Ambrée/Rousse", "Brune", "Noire"], label: "Couleur" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :color, label: "Style (IPA, Stout, Trappiste...)" %>
      </div>
    </div>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :color, label: "Malts" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :color, label: "Houblons" %>
      </div>
    </div>

    <hr>

    <h3>Vin</h3>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :producer, label: "Producteur" %>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :color, collection: ["Rouge", "Blanc", "Rosé"], label: "Couleur" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :color, label: "Millésime" %>
      </div>
    </div>
    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :color, label: "Appellation" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :color, label: "Cépages" %>
      </div>
    </div>

    <hr>

    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :alcohol, label: "Degré d'alcool" %>
      </div>
      <div class="col-6 pr-0">
        <%= f.input :price, label: "Prix" %>
      </div>
    </div>
    <%= f.input :rating, label: "Note sur 10", hint: "(nombre entier)" %>
    <%= f.input :comment, label: "Commentaire" %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Ajouter la dégustation", class: "btn btn-primary mb-2" %>
    </div>
    <p class="text-center"><%= link_to "Annuler", root_path %></p>
  <% end %>
</div>
