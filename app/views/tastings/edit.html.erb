<%= simple_form_for [ @user, @tasting ] do |f| %>
  <%= f.input :category, collection: ["Bière", "Vin"] %>
  <%= f.input :color, collection: ["Blonde", "Blanche", "Ambrée/Rousse", "Brune", "Noire", "Rouge", "Blanc", "Rosé"] %>
  <%= f.input :name %>
  <%= f.input :producer %>
  <%= f.input :alcohol %>
  <%= f.input :price %>
  <%= f.input :rating %>
  <%= f.input :comment %>
  <%= f.submit %>
<% end %>
